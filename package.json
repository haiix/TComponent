{
  "name": "@haiix/tcomponent",
  "version": "1.1.2",
  "description": "A tiny component system written in TypeScript.",
  "main": "dist/TComponent.mjs",
  "types": "dist/TComponent.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run watch",
    "build": "npm run clean && npm run fix && npm run test && npm run bundle",
    "bundle": "cross-env NODE_ENV=production webpack && api-extractor run",
    "watch": "cross-env NODE_ENV=development webpack -w",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "fix": "npm run format && npm run lint",
    "test": "jest",
    "coverage": "jest --coverage",
    "clean": "rimraf dist types"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haiix/TComponent.git"
  },
  "author": "haiix",
  "license": "MIT",
  "devDependencies": {
    "@microsoft/api-extractor": "^7.51.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7",
    "typescript-eslint": "^8.25.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
